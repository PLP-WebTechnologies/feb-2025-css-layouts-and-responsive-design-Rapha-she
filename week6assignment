/* Reset & base */
* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: Arial, sans-serif;
  color: #333;
  background-color: #f9f9f9;
}

/* Navigation Bar: Flexbox */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #007acc;
  padding: 15px 30px;
  color: white;
}

.logo {
  font-weight: bold;
  font-size: 1.5rem;
}

.nav-links a {
  color: white;
  text-decoration: none;
  margin-left: 20px;
  font-weight: 600;
  transition: color 0.3s ease;
}

.nav-links a:hover {
  color: #cce7ff;
}

/* Main container uses CSS Grid */
.container {
  display: grid;
  grid-template-columns: 250px 1fr;
  gap: 20px;
  max-width: 1200px;
  margin: 30px auto;
  padding: 0 20px;
}

/* Sidebar styles */
.sidebar {
  background: white;
  padding: 20px;
  border-radius: 6px;
  box-shadow: 0 0 8px rgba(0,0,0,0.1);
}

/* Content styles */
.content {
  background: white;
  padding: 20px;
  border-radius: 6px;
  box-shadow: 0 0 8px rgba(0,0,0,0.1);
}

.content .grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
  margin-top: 20px;
}

.grid-item {
  background-color: #007acc;
  color: white;
  padding: 25px;
  border-radius: 4px;
  font-weight: bold;
  text-align: center;
}

/* Footer */
.footer {
  text-align: center;
  padding: 15px;
  background-color: #e3e3e3;
  margin-top: 40px;
  font-size: 0.9rem;
  color: #555;
}

/* Media Queries */

/* Tablet */
@media (max-width: 900px) {
  .container {
    grid-template-columns: 1fr;
  }

  .content .grid {
    grid-template-columns: 1fr 1fr;
  }

  .nav-links a {
    margin-left: 10px;
  }
}

/* Mobile */
@media (max-width: 600px) {
  .navbar {
    flex-direction: column;
    align-items: flex-start;
  }

  .nav-links {
    margin-top: 10px;
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  .nav-links a {
    margin: 8px 0;
  }

  .content .grid {
    grid-template-columns: 1fr;
  }
}
