style.css

/* Base styles */
* {
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin: 0;
  background-color: #fafafa;
  color: #333;
}

/* Header using Flexbox */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 40px;
  background-color: #4a90e2;
  color: white;
}

.logo {
  font-weight: bold;
  font-size: 1.5rem;
}

.nav-list {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
  gap: 25px;
}

.nav-list a {
  color: white;
  text-decoration: none;
  font-weight: 600;
  padding: 6px 12px;
  border-radius: 4px;
  transition: background-color 0.3s;
}

.nav-list a:hover {
  background-color: #357ABD;
}

/* Main content area: Flexbox for sidebar + grid */
.main-content {
  display: flex;
  gap: 30px;
  padding: 30px 40px;
  max-width: 1200px;
  margin: 0 auto;
}

/* Sidebar with Flexbox (vertical layout) */
.sidebar {
  flex: 1;
  background-color: white;
  padding: 20px;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  gap: 20px;
  box-shadow: 0 2px 6px rgb(0 0 0 / 0.1);
}

.btn {
  padding: 10px 15px;
  border: none;
  background-color: #4a90e2;
  color: white;
  font-weight: 600;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.btn:hover {
  background-color: #357ABD;
}

/* Grid content */
.grid-content {
  flex: 3;
  background-color: white;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgb(0 0 0 / 0.1);
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  margin-top: 15px;
}

.grid-item {
  background-color: #4a90e2;
  color: white;
  padding: 25px;
  border-radius: 6px;
  font-weight: bold;
  text-align: center;
}

/* Footer */
.footer {
  text-align: center;
  padding: 15px;
  background-color: #ececec;
  margin-top: 40px;
  font-size: 0.9rem;
  color: #555;
}

/* Responsive Media Queries */

/* Tablet */
@media (max-width: 900px) {
  .main-content {
    flex-direction: column;
    padding: 20px;
  }

  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Mobile */
@media (max-width: 600px) {
  .header {
    flex-direction: column;
    gap: 15px;
    padding: 15px 20px;
  }

  .nav-list {
    flex-direction: column;
    gap: 10px;
  }

  .grid-container {
    grid-template-columns: 1fr;
  }

  .sidebar, .grid-content {
    padding: 15px;
  }
}
